<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.sujith.covidtracker.CountryCovidData">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deaths">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-light"
                android:text="CountryName"
                android:id="@+id/countryName"
                android:textColor="@color/color_white"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/imageFlag"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white" />
    <GridView
        android:id="@+id/countryDataGridViewLayout"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="6dp"
        android:numColumns="2"
        android:verticalSpacing="6dp"
        android:paddingBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_white" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deaths">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:paddingLeft="90dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:text="CountryTime"
                android:id="@+id/countryTime"
                android:textColor="@color/color_white"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Covid Precautions:-"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/active"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Maintain a safe distance from others (at least 1 metre), even if they don’t appear to be sick."
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.Wear a mask in public, especially indoors or when physical distancing is not possible."
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.Get vaccinated when it’s your turn. Follow local guidance about vaccination."
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.Clean your hands often. Use soap and water, or an alcohol-based hand rub."
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.Cover your nose and mouth with your bent elbow or a tissue when you cough or sneeze."
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.Choose open, well-ventilated spaces over closed ones. Open a window if indoors."
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deaths">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:paddingLeft="90dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Stay Home and Stay Safe"
                android:textColor="@color/color_white"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
